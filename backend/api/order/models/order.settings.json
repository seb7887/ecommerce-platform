{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "products": {
      "collection": "product"
    },
    "customerName": {
      "type": "string"
    },
    "customerEmail": {
      "type": "email"
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "shippingMethod": {
      "type": "enumeration",
      "enum": [
        "person",
        "mail",
        "motorcycle"
      ],
      "default": "person",
      "required": true
    },
    "delivered": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "paid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "detail": {
      "type": "json",
      "required": true
    }
  }
}
